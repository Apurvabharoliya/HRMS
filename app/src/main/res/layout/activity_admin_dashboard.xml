<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollAdminDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/layoutAdminDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ADMIN HEADER -->
        <LinearLayout
            android:id="@+id/layoutAdminHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_admin_strip">

            <TextView
                android:id="@+id/tvAdminTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Control Center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvAdminSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System governance and access control"
                android:textSize="14sp"
                android:textColor="#E5E7EB"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- ROLE MANAGEMENT -->
        <LinearLayout
            android:id="@+id/actionRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_action_tile">

            <TextView
                android:id="@+id/tvRoleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role Management"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:id="@+id/tvRoleSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign Admin, HR, Employee roles"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- ORGANIZATION SETTINGS -->
        <LinearLayout
            android:id="@+id/actionOrganization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_action_tile">

            <TextView
                android:id="@+id/tvOrgTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organization Setup"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:id="@+id/tvOrgSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company info, departments, structure"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- SYSTEM POLICIES -->
        <LinearLayout
            android:id="@+id/actionSystemPolicies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_action_tile">

            <TextView
                android:id="@+id/tvSystemPolicyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Policies"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:id="@+id/tvSystemPolicySub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Global rules and compliance"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- LOGOUT -->
        <LinearLayout
            android:id="@+id/actionLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_logout_tile">

            <TextView
                android:id="@+id/tvLogoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#DC2626" />

            <TextView
                android:id="@+id/tvLogoutSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Securely exit admin session"
                android:textSize="13sp"
                android:textColor="#991B1B"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
