<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollApplyLeave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/layoutApplyLeave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:id="@+id/layoutLeaveHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_status_strip">

            <TextView
                android:id="@+id/tvLeaveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Leave"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvLeaveSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit leave for approval"
                android:textSize="14sp"
                android:textColor="#E0E7FF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- FORM CARD -->
        <LinearLayout
            android:id="@+id/layoutLeaveForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_rounded">

            <!-- LEAVE TYPE -->
            <TextView
                android:id="@+id/tvLeaveTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Type"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <Spinner
                android:id="@+id/spLeaveType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input" />

            <!-- FROM DATE -->
            <TextView
                android:id="@+id/tvFromDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select start date"
                android:padding="14dp"
                android:background="@drawable/bg_input"
                android:textColor="#374151"
                android:layout_marginTop="6dp" />

            <!-- TO DATE -->
            <TextView
                android:id="@+id/tvToDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Date"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select end date"
                android:padding="14dp"
                android:background="@drawable/bg_input"
                android:textColor="#374151"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvTotalDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Leave Days: 0"
                android:textSize="14sp"
                android:textColor="#4F46E5"
                android:layout_marginTop="8dp"/>

            <!-- REASON -->
            <TextView
                android:id="@+id/tvReasonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etReason"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:hint="Explain reason for leave"
                android:background="@drawable/bg_input"
                android:padding="14dp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvReasonCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/300"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp"/>

            <!-- SUBMIT -->
            <Button
                android:id="@+id/btnSubmitLeave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Request"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#4F46E5"
                android:padding="14dp"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
