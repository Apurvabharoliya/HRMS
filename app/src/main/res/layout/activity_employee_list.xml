<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEmployeeListRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    android:padding="16dp">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/layoutEmployeeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_status_strip">

        <TextView
            android:id="@+id/tvEmployeeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Registry"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tvEmployeeSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company workforce overview"
            android:textSize="14sp"
            android:textColor="#E0E7FF"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- SEARCH -->
    <EditText
        android:id="@+id/etSearchEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search employee"
        android:padding="14dp"
        android:background="@drawable/bg_input"
        android:textColor="#111827"
        android:textColorHint="#9CA3AF"
        android:layout_marginTop="16dp"/>

    <!-- LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEmployees"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>

</LinearLayout>
