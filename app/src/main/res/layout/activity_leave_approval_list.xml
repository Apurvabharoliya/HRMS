<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLeaveApprovalRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    android:padding="16dp">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/layoutLeaveApprovalHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_status_strip">

        <TextView
            android:id="@+id/tvLeaveApprovalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Approvals"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tvLeaveApprovalSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending requests for review"
            android:textSize="14sp"
            android:textColor="#E0E7FF"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLeaveApproval"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>
</LinearLayout>
