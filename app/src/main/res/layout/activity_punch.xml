<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPunchRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/layoutPunchHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_status_strip">

        <TextView
            android:id="@+id/tvPunchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Session"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvPunchDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="14sp"
            android:textColor="#E0E7FF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- STATUS CARD -->
    <LinearLayout
        android:id="@+id/layoutPunchStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_card_rounded">

        <TextView
            android:id="@+id/tvCurrentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Not Punched In"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#DC2626" />

        <TextView
            android:id="@+id/tvPunchInTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punch In: --"
            android:textSize="14sp"
            android:textColor="#374151"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvWorkingDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Working Time: 00:00:00"
            android:textSize="14sp"
            android:textColor="#374151"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- ACTION BUTTON -->
    <Button
        android:id="@+id/btnPunchAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punch In"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#4F46E5"
        android:padding="16dp"
        android:layout_marginTop="30dp" />

</LinearLayout>
